<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCheckBoxGreen" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#f00</item>
        <item name="colorControlActivated">#0f0</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:thumb">@drawable/movie_switch_thumb</item>
        <item name="track">@drawable/movie_switch_track</item>
    </style>


    <!--line_gray #ffd7d7d7-->


    <style name="CustomListView" parent="@android:style/Widget.AbsListView">
        <item name="android:background">#fff</item>
        <item name="android:listSelector">@drawable/list_item</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#ffd7d7d7</item>
        <item name="android:dividerHeight">1.0px</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>

    <style name="CustomNormalButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/custom_btn_color</item>
        <item name="android:background">@drawable/btn_light</item>
    </style>

</resources>
